<div class="row">
    <div class="col-md-12">
        <div id="chatbox-container" style="height: 350px; overflow: scroll">
            <ul id="chat-box" class="list-group">
            <%= for message <- @messages do %>
                <li class="list-group-item"><%= message.body %></li>
            <% end %>
            </ul>
        </div>
        <div>
            <form class="form-inline" id="message-form">
                <div class="form-group">
                    <input type="text" class="form-control" id="message-box" placeholder="Hi" required autofocus>
                </div>
                <button type="submit" class="btn btn-default">Send</button>
            </form>
        </div>
    </div>
</div>